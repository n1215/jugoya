{
    "name": "n1215/jugoya",
    "description": "A simple HTTP application builder using PSR-15 HTTP Server Request Handler and Middleware.",
    "keywords": [
        "psr-15",
        "middleware dispatcher",
        "request handler",
        "middleware"
    ],
    "type": "library",
    "homepage": "https://github.com/n1215/jugoya",
    "license": "MIT",
    "authors": [
        {
            "name": "n1215",
            "email": "knakae1215@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "http-interop/http-server-middleware": "^1.0",
        "psr/container": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "N1215\\Jugoya\\": "src"
        }
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.4",
        "phpunit/phpunit": "^6.5"
    },
    "autoload-dev": {
        "psr-4": {
            "N1215\\Jugoya\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "rm -rf ./build",
            "mkdir ./build",
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage --coverage-clover=build/coverage.clover"
        ]
    }
}
